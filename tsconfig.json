{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext", 
        "allowImportingTsExtensions": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*.ts"],
            "@db/*": ["services/db/*.ts"],
            "@security/*": ["services/security/*.ts"],
            "@routes/*": ["services/routes/*.ts"]
        },
        "outDir": "./dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}